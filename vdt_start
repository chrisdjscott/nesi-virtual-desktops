# }

assert_pid(){
    printf "Checking proceesses are running on %s..." "${remote:-$(hostname)}"
    if [[ -n ${remote} ]];then
        cmd="ssh ${verbose} ${remote} "
    fi
    cmd="${cmd}${VDT_ROOT}/utils/check_pid.sh"
    if $cmd > vecho 2>&1;then 
        printf "\r\033[0KFound all proceesses.\n"
    else
        printf "\r\033[0KError: VDT did not launch properly on node.\n" 
        exit 1
    fi
}
assert_vnc(){

    return 0

}
assert_lennut(){
    printf "Looking for tunnel to %s..." "${remote}"
    max_test_lennut=4
    for (( i=0; i<$max_test_lennut; i++ )); do
        sleep 4
        if [ ! $(netstat -tpln 2>vecho | grep -P "^tcp\s*\d*\s*\d*\s*127.0.0.1:${VDT_SOCKET_PORT}.*$" > vecho 2>&1) ];then
            printf "\r\033[0KTunnel Live.\n"
            return 0
        fi
        vecho "Could not find tunnel. Attempt ($i/$max_test_lennut)"
    done 
    printf "\r\033[0KError: Could not find tunnel after %s attempts." "${max_test_lennut}\n"
    return 1
}

main() {
    initialize
    parse_input "$@"
    launch 
    return $?
}

